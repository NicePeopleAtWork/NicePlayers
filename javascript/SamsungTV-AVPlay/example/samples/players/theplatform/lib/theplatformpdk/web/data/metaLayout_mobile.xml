<?xml version="1.0"?><layout>	<!-- This is the default layout used by the PDK when appearing on a mobile device. -->	<controls>		<card id="tpMobileControls">			<!-- Widths for mobile regions use percentages, since we usually just		     want to fill whatever space is available to us on the device. -->			<region id="tpMobileVideoTopRegion">				<row>					<group percentWidth="100">						<spacer width="4"/>						<control id="tpCurrentTime"/>						<control id="tpScrubber" showTooltip="never"/>						<control id="tpTotalTime"/>						<spacer width="4"/>					</group>				</row>			</region>			<region id="tpMobileVideoBottomRegion">				<row percentWidth="100">					<spacer width="100%"/>					<!-- We turn off tooltips, as they may appear briefly when their buttons 					     are tapped, and there is no concept of mouseover on a mobile device. -->					<control id="tpPrevious" tooltipEnabled="false"/>					<control id="tpPlay" tooltipEnabled="false"/>					<control id="tpNext" tooltipEnabled="false"/>					<spacer width="100%"/>				</row>				<row percentWidth="100">					<spacer width="100%"/>					<group>						<control id="tpVolumeSlider"/>					</group>					<spacer width="100%"/>				</row>			</region>		</card>	</controls></layout>